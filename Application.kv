<MainGUI>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            padding:[10,10,10,10]
            spacing: 10
            FileChooserListView
                id:file_chooser
                dirselect: True
                fileselect: False
                on_selection:root.select_to(*args)
                path:root.txt_root_dir
        BoxLayout:
            orientation:'vertical'
            BoxLayout:
                id:operation_box
                orientation:'vertical'
                size_hint: (1, 0.7)
                Label:
                    halign: 'right'
                    valign: 'middle'
                    text:root.txt_root_current_dir
                    size_hint: (1, 0.3)
                GridLayout:
                    cols:2
                    padding:[10,15,10,5]
                    spacing: 10
                    Label:
                        text:'File type to run OCR:'
                        size_hint_x:None
                        width:140
                    Spinner:
                        id: spinner_1
                        text: '<select type>'
                        values: ('jpg', 'png')
                        on_text: root.img_ext = spinner_1.text
            BoxLayout:
                id:progress_bar_box
                padding:[10,5,10,5]
                spacing: 10
                orientation:'vertical'
                BoxLayout:
                    orientation:'horizontal'
                    Label:
                        id:lblInfo
                        text:'Info:'
                        size_hint: (0.1, 1)
                    Label:
                        id:lblInfo
                        text:root.info_text
                        size_hint: (0.9, 1)
                ProgressBar:
                    max:100
                    value:root.percent
            BoxLayout:
                height:40
                size_hint: (1, 0.5)
                padding:[10,0,10,10]
                spacing: 10
                Button:
                    text:'Run the OCR Algorithm'
                    on_release: root.click_run_button()